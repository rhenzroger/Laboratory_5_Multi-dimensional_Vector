import numpy as np
import matplotlib.pyplot as plt

V = np.array([
    [1, 4, 7],
    [3, 6, 9],
    [4, 7, 10]
])

fig = plt.figure()
V1 = fig.gca(projection='3d')

V1.set_xlim([0, 10])
V1.set_ylim([0, 10])
V1.set_zlim([0, 10])

origin = (0, 0, 0)
V1.quiver(origin, origin, origin, V[:, 0], V[:, 1], V[:, 2],
          arrow_length_ratio=0.05, colors=['black', 'pink', 'blue'])
plt.show()
